  <%= form_with(model: idea, local: true, class: "form-horizontal") do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
 <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control", placeholder: "type a name" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: "form-control", placeholder: "What new on you today?" %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :picture, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.file_field :picture %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Submit your news", class: "btn btn-info" %>
    </div>
  </div>
<% end %>
